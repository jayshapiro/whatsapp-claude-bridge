# =============================================================================
# WhatsApp-Claude Bridge Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# ── Twilio (https://console.twilio.com) ──────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ── Authorization ─────────────────────────────────────────────────────────────
# Only this phone number can interact with the bot (E.164 format)
APPROVED_PHONE_NUMBER=+1234567890

# ── Anthropic (https://console.anthropic.com) ────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ── Server ────────────────────────────────────────────────────────────────────
SERVER_HOST=127.0.0.1
SERVER_PORT=8001

# ── Conversation Settings ─────────────────────────────────────────────────────
CONVERSATION_TIMEOUT_MINUTES=60
MAX_CONVERSATION_MESSAGES=50

# ── Security ──────────────────────────────────────────────────────────────────
# Require WhatsApp approval before running destructive bash commands
REQUIRE_APPROVAL_FOR_BASH=true
APPROVAL_TIMEOUT_SECONDS=300

# ── Optional: User name (shown in system prompt) ─────────────────────────────
USER_DISPLAY_NAME=

# ── Optional: Google Drive public folder for media hosting ────────────────────
# If set, the bridge will use this folder to host outbound media (images, audio, video)
# Create a folder in Google Drive, set sharing to "Anyone with the link can view"
# and paste the folder ID here (the long string in the folder's URL)
GOOGLE_DRIVE_DROPBOX_FOLDER_ID=
